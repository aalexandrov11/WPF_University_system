<Window x:Class="StudentInfoSystem.LoginPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentInfoSystem"
        mc:Ignorable="d"
        Title="LoginPage" Height="450" Width="520">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <GroupBox Grid.Row="0" HorizontalAlignment="Center" Header="Login Information" Width="500">
            <Grid>
                <Label Content="Потребителско име: " HorizontalAlignment="Left" Height="30" Margin="10,63,0,161"  />
                <TextBox Name="usernameTextBox" Height="25" Width="200" Margin="0,66,0,0" VerticalAlignment="Top" HorizontalAlignment="Center"></TextBox>
                <Label Content="Парола: " HorizontalAlignment="Left" Height="30" Margin="78,146,0,81" />
                <TextBox Name="passwordTextBox" Height="25" Width="200" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,78" ></TextBox>
            </Grid>
        </GroupBox>
        <Button Grid.Row="1" Content="LogIn" VerticalAlignment="Center" HorizontalAlignment="Center" Height="50" Width="100" Click="Button_Click" />
    </Grid>
</Window>
